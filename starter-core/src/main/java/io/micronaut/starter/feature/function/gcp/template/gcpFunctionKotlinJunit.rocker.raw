@import io.micronaut.starter.application.Project

@args (
Project project
)

@if (project.getPackageName() != null) {
package @project.getPackageName();
}

import io.micronaut.http.*
import org.junit.jupiter.api.Test
import io.micronaut.gcp.function.http.*
import org.junit.jupiter.api.Assertions

class @project.getClassName()FunctionTest {

    @@Test
    fun testFunction() {
        HttpFunction().use { function ->
           val response = function.invoke(HttpMethod.GET, "/")
           Assertions.assertEquals(HttpStatus.OK, response.getStatus());
        }
    }


    @@Test
    fun testPost(){
        HttpFunction().use { function ->
            val input = SampleInputMessage()
            input.name = "Test Name"
            val request = HttpRequest.POST("/", input).contentType(MediaType.APPLICATION_JSON_TYPE)
            val response = function.invoke(request)
            Assertions.assertEquals(HttpStatus.OK, response.getStatus());
        }
    }
}
