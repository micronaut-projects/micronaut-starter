    @if (buildTool.equals(BuildTool.MAVEN)) {

# [START cloudbuild_maven]
steps:
  - name: maven:3-jdk-@jdkVersion.majorVersion()
    entrypoint: mvn
    args: ["test"]
  - name: maven:3-jdk-@jdkVersion.majorVersion()
    entrypoint: mvn
    args: ["package", "-Dmaven.test.skip=true"]
  - name: gcr.io/cloud-builders/docker
    args: ["build", "-t", "gcr.io/$PROJECT_ID/@projectName", "--build-arg=JAR_FILE=target/@projectName-0.1.jar", "."]
images: ["gcr.io/$PROJECT_ID/@projectName"]
# [END cloudbuild_maven]

    } else if (buildTool.isGradle()) {

# [START cloudbuild_gradle]
steps:
  - name: gradle:7.4.2-jdk@jdkVersion.majorVersion()
    entrypoint: gradle
    args: ["test"]
  - name: gradle:7.4.2-jdk@jdkVersion.majorVersion()
    entrypoint: gradle
    args: ["assemble"]
  - name: gcr.io/cloud-builders/docker
    args: ["build", "-t", "gcr.io/$PROJECT_ID/@projectName", "--build-arg=JAR_FILE=build/libs/@projectName-0.1.jar", "."]
images: ["gcr.io/$PROJECT_ID/@projectName"]
# [END cloudbuild_gradle]

    }

