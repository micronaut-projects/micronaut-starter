@import io.micronaut.starter.application.Project

@args (
Project project
)

apiVersion: apps/v1
kind: Deployment
metadata:
  name: "@project.getName()"
spec:
  selector:
    matchLabels:
      app: "@project.getName()"
  template:
    metadata:
      labels:
        app: "@project.getName()"
    spec:
      containers:
        - name: "@project.getName()"
          image: "gcr.io/@project.getName()/jib-image"
          ports:
            - name: http
              containerPort: 8080
          readinessProbe:
            httpGet:
              path: /health/readiness
              port: 8080
            initialDelaySeconds: 5
            timeoutSeconds: 3
          livenessProbe:
            httpGet:
              path: /health/liveness
              port: 8080
            initialDelaySeconds: 5
            timeoutSeconds: 3
            failureThreshold: 10
---
apiVersion: v1
kind: Service
metadata:
  name: "@project.getName()"
spec:
  selector:
    app: "@project.getName()"
  type: LoadBalancer
  ports:
    - protocol: "TCP"
      port: 8080